{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    //основная директория разработки
    "rootDir": "./src",
    //скомпилированный код проекта
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./__tests__/**/*",
    "__tests__",
    "__tests__/**/*",
    "**/*.spec.ts"
  ],
  "files": [
    "src/core/types/index.d.ts"
  ]
}

